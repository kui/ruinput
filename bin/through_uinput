# -*- coding:utf-8; mode:ruby; -*-

require "rubygems"
require "revdev"
require "ruinput"

def main

  if ARGV.length != 1
    puts "usage: #{$0} /dev/input/event[0-9]+"
    exit false
  end

  include Revdev
  $evdev = EventDevice.new ARGV.shift
  $uinput = Ruinput::UinputDevice.new "/dev/uinput"

  destroy = lambda do
    begin
      $evdev.ungrab
      puts "ungrab"
    rescue => e
      puts e.backtrace.join "\n\t"
    end
    begin
      $uinput.destroy
      puts "destroy"
    rescue => e
      puts e.backtrace.join "\n\t"
    end
  end

  trap :INT, &destroy
  trap :TERM, &destroy

  begin
    $uinput.create "foo", $evdev.device_id
    $evdev.grab
    while true
      ie = $evdev.read_input_event
      len = $uinput.write_input_event ie
      next if not ie.hr_type.equal? :EV_KEY # limit to display only key events
      puts "type:#{ie.hr_type}(#{ie.type})\tcode:#{ie.hr_code}(#{ie.code})\tvalue:#{ie.value} (#{len})"
    end
  rescue => e
    puts e.backtrace.join "\n\t"
  end

end

main
